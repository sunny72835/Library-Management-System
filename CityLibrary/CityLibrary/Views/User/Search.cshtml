
@{
    ViewBag.Title = "Search";
}
<style>
    body {
        background: #333;
    }

    .form_bg {
        background-color: #eee;
        color: #666;
        padding: 20px;
        border-radius: 10px;
        position: absolute;
        border: 1px solid #fff;
        margin: auto;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        width: 320px;
        height: 325px;
    }

    .align-center {
        text-align: center;
    }
</style>
@using (Html.BeginForm("Search", "User", FormMethod.Post, new { target = "_blank" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
    <div class="row">
        <div class="form_bg">
            <form>
                 <h2 class="text-center">Document Return</h2>
                <br/>                
                <div class="form-group">
                    <input type="text" class="form-control" name="docId" id="docId" placeholder="Enter document id">                    
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="docTitle" id="docTitle" placeholder="Enter document title">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="pubName" id="pubName" placeholder="Enter publisher's name">
                </div>                
                <br/>
                <div class="align-center">
                    <button type="submit" class="btn btn-default" id="btnSearch">submit</button>
                    @Html.ActionLink("Back", "Main", "User", new { @class = "btn btn-default" })
                </div>
            </form>
        </div>
    </div>
</div>
}

