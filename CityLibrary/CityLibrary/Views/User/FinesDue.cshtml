
@{
    ViewBag.Title = "Fine Calculator";
}
@Html.ActionLink("Return to main Menu for user", "Main", "User")
<h2>Fine Calculator</h2>
@{
    if (ViewBag.msg != null)
    {
        <script type="text/javascript">
            alert('@ViewBag.msg');
        </script>
    }
}
@using (Html.BeginForm("FinesDue","User",FormMethod.Post))
{
    <table>
        <tr>
            <td>Enter Document Id: </td>
            <td>@Html.Editor("docId")</td>
        </tr>
        <tr>
            <td>Enter Copy No: </td>
            <td>@Html.Editor("copyNo")</td>
        </tr>
        <tr>
            <td>Enter Library Id: </td>
            <td>@Html.Editor("libId")</td>
        </tr>
        <tr>
            <td><input id="btnFine" type="submit" value="Get fine" /></td>
        </tr>
    </table>
}

