
@{
    ViewBag.Title = "Document Reservation";
}
<style>
    body {
        background: #333;
    }

    .form_bg {
        background-color: #eee;
        color: #666;
        padding: 20px;
        border-radius: 10px;
        position: absolute;
        border: 1px solid #fff;
        margin: auto;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        width: 350px;
        height: 370px;
    }

    .form_bg_1 {
        background-color: #eee;
        color: #666;
        padding: 20px;
        border-radius: 30px;
        position: absolute;
        border: 1px solid #fff;
        margin: auto;
        top: 600px;
        right: 0px;
        bottom: 0;
        left: 0px;
        width: 350px;
        height: 212px;
    }

    .date-picker {
        display: block;
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
        -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
        -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    }

    .align-center {
        text-align: center;
    }
</style>

<link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-3.2.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")"></script>
<script type="text/javascript">
    $(function () {
        $('.date-picker').datepicker({
            changeMonth: true,
            changeYear: true
        });
    });
</script>

@{
    if (ViewBag.msg != null)
    {
        <script type="text/javascript">
            alert('@ViewBag.msg');
        </script>
    }
}

@using (Html.BeginForm("DocumentReserve", "User", FormMethod.Post))
{
    <div class="container">
    <div class="row">
        <div class="form_bg">
            <form>
                 <h2 class="text-center">Document Reservation</h2>
                <br/>                
                <div class="form-group">
                    <input type="text" class="form-control" name="docId" id="docId" placeholder="Enter document id">                    
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="copyNo" id="copyNo" placeholder="Enter copy no">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="libId" id="libId" placeholder="Enter branch id">
                </div>
                <div class="form-group">
                    <input type="text" class="date-picker" name="resDate" id="resDate" placeholder="Reservation date">
                </div>                
                <br/>
                <div class="align-center">
                    <button type="submit" class="btn btn-default" id="btnReserve">Reserve</button>
                    @Html.ActionLink("Back", "Main", "User", new { @class = "btn btn-default" })
                </div>
            </form>
        </div>
    </div>
</div>
    
}
@using (Html.BeginForm("DocDetails", "User", FormMethod.Post, new {target = "_blank" }))
{
    <div class="container">
    <div class="row">
        <div class="form_bg_1">
            <form>
                 <h2 class="text-center">Search Document</h2>
                <br/>                
                <div class="form-group">
                    <input type="text" class="form-control" name="docTitle" id="docTitle" placeholder="Enter document title">                    
                </div>                            
                <br/>
                <div class="align-center">
                    <button type="submit" class="btn btn-default" id="btnDoc">Get Details</button>                    
                </div>
            </form>
        </div>
    </div>
</div>
    
} 

