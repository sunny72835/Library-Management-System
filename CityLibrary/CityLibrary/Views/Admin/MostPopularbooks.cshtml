
@{
    ViewBag.Title = "MostPopularbooks";
}

<style>
    body {
        background: #333;
    }

    .form_bg {
        background-color: #eee;
        color: #666;
        padding: 20px;
        border-radius: 10px;
        position: absolute;
        border: 1px solid #fff;
        margin: auto;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        width: 340px;
        height: 250px;
    }

    .align-center {
        text-align: center;
    }
</style>
@using (Html.BeginForm("MostPopularBooks", "Admin", FormMethod.Post, new { target = "_blank" }))
{
    <div class="container">
    <div class="row">
        <div class="form_bg">
            <form>
                 <h2 class="text-center">Most Popular books</h2>
                <br/>                
                <div class="form-group">
                    <input type="text" class="form-control" name="year" id="year" placeholder="Enter year">                    
                </div>                
                <br/>
                <div class="align-center">
                    <button type="submit" class="btn btn-default" id="btnBorrowYear">Submit</button>
                    @Html.ActionLink("Back", "Main", "Admin", new { @class = "btn btn-default" })
                </div>
            </form>
        </div>
    </div>
    </div>    
}

