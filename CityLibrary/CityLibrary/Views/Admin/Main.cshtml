
@{
    ViewBag.Title = "Admin Main Menu";
}
<style>
    body {
        background: #333;
    }
    .column {
        float: left;
        width: 33%;
        padding: 10px;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
    .form_bg {
        background-color: #eee;
        color: #666;
        padding: 20px;
        border-radius: 10px;
        position: absolute;
        border: 1px solid #fff;
        margin: auto;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        width: 320px;
        height: 280px;
    }

    .align-center {
        text-align: center;
    }
</style>
<script>
    var elements = document.getElementsByClassName("column");
    var i;
    function gridView() {
        for (i = 0; i < elements.length; i++) {
            elements[i].style.width = "50%";
        }
    }    
</script>
<div class="row">
    <div class="column" style="background-color: #bbb;">
        <h2>@Html.ActionLink("Add a document", "AddDocument", "Admin")</h2>
        <p>To add a new book, Journal or Proceeding</p>
    </div>
    <div class="column" style="background-color:#bbb;">
        <h2>@Html.ActionLink("Check Status", "Search", "Admin")</h2>
        <p>To check status of a document</p>
    </div>
    <div class="column" style="background-color: #bbb;">
        <h2>@Html.ActionLink("Add a new reader", "AddReader", "Admin")</h2>
        <p>To add a new reader in the system</p>
    </div>    
</div>

<div class="row">
    <div class="column" style="background-color:#ccc;">
        <h2>@Html.ActionLink("Branch Information", "BranchInfo", "Admin")</h2>
        <p>To get information of a branch</p>
    </div>
    <div class="column" style="background-color: #ccc;">
        <h2>@Html.ActionLink("Frequent borrowers", "FrequentBorrowers", "Admin")</h2>
        <p>To get a list of frequent borrowers</p>
    </div>
    <div class="column" style="background-color: #ccc;">
        <h2>@Html.ActionLink("Most borrowed books", "MostBorrowedBooks", "Admin")</h2>
        <p>To see a list of "most borrowed books" per branch</p>
    </div>    
</div>

<div class="row">
    <div class="column" style="background-color: #bbb;">
        <h2>@Html.ActionLink("Most popular books", "MostPopularbooks", "Admin")</h2>
        <p>To get a list of the most popular books per year</p>
    </div>
    <div class="column" style="background-color: #bbb;">
        <h2>@Html.ActionLink("Average fines", "AverageFine", "Admin")</h2>
        <p>To get a list of average fines paid by users</p>
    </div>
    <div class="column" style="background-color:#bbb;">
        <h2>@Html.ActionLink("Quit", "Index", "Home")</h2>
        <p>To return to the main menu</p>
    </div>
</div>