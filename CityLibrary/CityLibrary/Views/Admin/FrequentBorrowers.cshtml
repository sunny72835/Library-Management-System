
@{
    ViewBag.Title = "Frequent Borrowers";
}

<style>
    body {
        background: #333;
    }

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
        text-align: center;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }

    tr:nth-child(odd) {
        background-color: white;
    }
</style>
<h2>List of Top 10 Borrowers</h2>
<table border="1">
    <tr>
        <th>Name of Reader</th>
        <th>No. of Books borrowed</th>
    </tr>
    @foreach (var row in Model.Rows)
    {
        <tr>
            <td>@row["ReaderName"]</td>
            <td>@row["Books_Borrowed"]</td>
        </tr>
    }
</table>

