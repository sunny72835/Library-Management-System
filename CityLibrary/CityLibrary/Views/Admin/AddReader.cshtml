
@{
    ViewBag.Title = "Add Reader";
}

@{
    if (ViewBag.msg != null)
    {
        <script type="text/javascript">
            alert('@ViewBag.msg');
        </script>
    }
}
<style>
    body {
        background: #333;
    }

    .form_bg {
        background-color: #eee;
        color: #666;
        padding: 20px;
        border-radius: 10px;
        position: absolute;
        border: 1px solid #fff;
        margin: auto;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        width: 320px;
        height: 370px;
    }

    .align-center {
        text-align: center;
    }
</style>
@using (Html.BeginForm("AddReader","Admin",FormMethod.Post))
{
    <div class="container">
    <div class="row">
        <div class="form_bg">
            <form>
                 <h2 class="text-center">Add reader</h2>
                <br/>
                <div class="form-group">
                    <input type="text" class="form-control" name="readerName" id="readerName" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    @Html.DropDownList("type", new SelectListItem[]{
               new SelectListItem(){Text="Student", Value="Student"},
               new SelectListItem(){Text="Senior citizen", Value="Senior citizen"},
               new SelectListItem(){Text="Staff", Value="Staff"}
           }, "Select Reader Type", new { @class="form-control"})
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="phoneNo" id="phoneNo" placeholder="Enter Phone no.">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="address" id="address" placeholder="Address">
                </div>
                <br/>
                <div class="align-center">
                    <button type="submit" class="btn btn-default" id="btnAddReader">Add</button>
                    @Html.ActionLink("Back", "Main", "Admin", new { @class = "btn btn-default" })
                </div>
            </form>
        </div>
    </div>
</div>
